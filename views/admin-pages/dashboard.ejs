<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
  <%- include('../partial/css') %>
    <%- include('../partial/js') %>
</head>

<body class="sb-nav-fixed">
  <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <!-- Navbar Brand-->
    <a class="navbar-brand ps-3" href="logout">
        <button class="btn btn-danger">Logout</button>
    </a>
    <!-- Sidebar Toggle-->
    <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i
        class="fas fa-bars"></i></button>
   
  </nav>
  <div id="layoutSidenav">
    <div id="layoutSidenav_nav">
      <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
          <div class="nav">
          </div>
        </div>
      </nav>
    </div>

    <div id="layoutSidenav_content">
      <main>
        <div class="container-fluid px-">
          <h1 class="mt-4">Admin Dashbord</h1>

          
          
          <div class="card mb-4">
            <div class="card-body">
              <table class="table table-dark table-striped-columns">
                <thead>
                  <tr>
                    <th scope="col">Owner</th>
                    <th scope="col">Product</th>
                    <th scope="col">Description Product</th>
                    <th scope="col">Status</th>
                    <th scope="col">Posted on</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(element=> { %>
                        <tr>
                            <td>
                                <%= element.User.username %>
                            </td>
                            <td>
                                <%= element.Item.name %>
                            </td>
                            <td>
                                <%= element.Item.description %>
                            </td>
                            <td>
                                <%= element.Item.status %>
                            </td>
                            <td>
                                <%= element.Item.createdAt %>
                            </td>
                            <td>
                                <% if (element.Item.status==='Approved' ) { %>
    
                                    <% }else{ %>
                                        <a href="/user/<%= element.Item.id %>/status/approved"
                                            style="text-decoration: none;">
                                            <button class="btn btn-success">Approve</button>
                                        </a>
                                        <%} %>
                                            <a href="/user/<%= element.User.id %>/delete/<%= element.Item.id %>"
                                                style="text-decoration: none;">
                                                <button class="btn btn-danger">Delete</button>
                                            </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
</body>

</html>