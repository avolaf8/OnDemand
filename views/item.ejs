<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add New Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/b5ee560b9a.js" crossorigin="anonymous"></script>
    <%- include('style/css') %>
</head>

<body>

    <div>
        <div class="header__title-container">
            <h1 class="header__title">Ngirim bro<img class="header__title-logo" alt="Mercury Delivery logo"></h1>
        </div>
        <h2 class="header__info">Detail items <span class="header__span">paket</span></h2>
        <img src="./svg/arrow-down.svg" alt="" class="scroll">
        <section id="offer" class="offer">
            <h3 class="section__subtitle">We give you
                <span class="services__title-slim">
                    the best
                </span> pricing plan
            </h3>
            <div class="offer__column-wrap">
                <% data.Items.forEach(e=> { %>
                    <div class="offer__section">
                        <div class="row">
                            <div class="col-">
                                <ul>
                                        <li class="offer__price"><%= e.name %><br><span class="offer__price-month"><%= e.description %></span></li>
                                    <li class="offer__heading"><%= e.Category.name %></li>
                                    <div class="offer__listing">
                                        <li class="offer__item"><i class="fas fa-check"></i> <%=formatRp(e.Category.price) %></li>
                                    </div>
                                    <li>
                                        <a href="/user/<%= data.id %>/edit/<%= e.id %>">
                                            <button class="offer__order">Edit</button>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
          </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>